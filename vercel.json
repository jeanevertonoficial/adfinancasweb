{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "DATABASE_JSON_PATH": "bd/database.json"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "hooks": {
      "postbuild": "npm install && npm run bd &"
  }
}
